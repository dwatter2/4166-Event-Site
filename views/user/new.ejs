<%- include('../partials/header.ejs')%>
<main id="eventCreate">
    <h2 class="bold underline">Create an Account:</h2>

    <form action = '/users' method = 'POST'>
        <label class="bold" for="firstName">First Name:
        <input type="text" id="firstName" name="firstName" required>
        </label>
        
        <label class="bold" for="lastName">Last Name:
        <input type="text" id="lastName" name="lastName" required>
        </label>
       
        <label class="bold" for="email">Email Address:
        <input type="email" id="email" name="email">
        </label>
        
        <label class="bold" for="password">Password:
        <input type="password" id="password" name="password" minlength="8" required>
        </label>

        <input type="submit" value="Sign Up">
</form>
</main>
<%- include('../partials/footer.ejs')%>